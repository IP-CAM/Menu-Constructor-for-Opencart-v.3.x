{{ header }}
<style>
  .add-material-container {
    text-align: right;
  }
  .add-material-btn {
    margin: 10px 0;
  }
  .help-categories-block {
    padding: 10px;
  }
  .help-category-block-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border: 1px solid grey;
    margin: 5px 0;
    padding: 5px;
  }
</style>
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-information" class="form-horizontal">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_menu }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_menu_constructor_nik_status" id="input-status" class="form-control">
                {% if module_menu_constructor_nik_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="add-material-container">
            <a href="{{ changeSettings }}" data-toggle="tooltip" title="{{ button_menu_settings }}" class="btn btn-primary add-material-btn"><i class="fa fa-gear"></i></a>
            <a href="{{ addMenuItem }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary add-material-btn">{{ button_add_menu_item }}</a>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">
                    {% if sort == 'hcd.title' %}
                      <a href="{{ sort_menu_item_name }}" class="{{ order|lower }}">{{ column_name_menu_item }}</a>
                    {% else %}
                      <a href="{{ sort_menu_item_name }}">{{ column_name_menu_item }}</a>
                    {% endif %}
                  </td>
                  <td class="text-right">
                    {% if sort == 'mi.sort_order' %}
                      <a href="{{ sort_menu_item_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                    {% else %}
                      <a href="{{ sort_menu_item_sort_order }}">{{ column_sort_order }}</a>
                    {% endif %}
                  </td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
              {% if menu_items %}
                {% for menu_item in menu_items %}
                  <tr>
                    <td class="text-left">{{ menu_item.name }}</td>
                    <td class="text-right">{{ menu_item.sort_order }}</td>
                    <td class="text-right">
                      <a href="{{ menu_item.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                      <span onclick="confirm('{{ confirm_delete_menu_item }}') ? location = '{{ menu_item.delete }}' : false;" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></span>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td class="text-center" colspan="4">{{ text_no_results }}</td>
                </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
          {% if addMenuBlock %}
            <div class="add-material-container">
              <a href="{{ addMenuBlock }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary add-material-btn">{{ button_add_menu_block }}</a>
            </div>
          {% endif %}
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
              <tr>
                <td class="text-left">
                  {% if sort == 'had.title' %}
                    <a href="{{ sort_article_title }}" class="{{ order|lower }}">{{ column_name_menu_item_block }}</a>
                  {% else %}
                    <a href="{{ sort_article_title }}">{{ column_name_menu_item_block }}</a>
                  {% endif %}
                </td>
                <td class="text-left">
                  {% if sort == 'had.title' %}
                    <a href="{{ sort_article_title }}" class="{{ order|lower }}">{{ column_name_menu_item }}</a>
                  {% else %}
                    <a href="{{ sort_article_title }}">{{ column_name_menu_item }}</a>
                  {% endif %}
                </td>
                <td class="text-right">
                  {% if sort == 'ha.sort_order' %}
                    <a href="{{ sort_article_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                  {% else %}
                    <a href="{{ sort_article_sort_order }}">{{ column_sort_order }}</a>
                  {% endif %}
                </td>
                <td class="text-right">{{ column_action }}</td>
              </tr>
              </thead>
              <tbody>
              {% if help_articles %}
                {% for help_article in help_articles %}
                  <tr>
                    <td class="text-left">{{ help_article.title }}</td>
                    <td class="text-right">{{ help_article.sort_order }}</td>
                    <td class="text-right">
                      <a href="{{ help_article.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                      <span onclick="confirm('{{ confirm_delete_help_article }}') ? location = '{{ help_article.delete }}' : false;" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="fa fa-trash-o"></i></span>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td class="text-center" colspan="4">{{ text_no_results }}</td>
                </tr>
              {% endif %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
{{ footer }}