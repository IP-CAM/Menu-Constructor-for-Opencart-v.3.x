    -o-transition: 0.3s ease;
    -webkit-transition: 0.3s ease;
    transition: 0.3s ease;
  }
  .mobile-menu-constructor-nik.active .mobile-menu-constructor-nik-inner {
    transform: translateX(0);
  }
  .mobile-menu-constructor-nik-inner li {
