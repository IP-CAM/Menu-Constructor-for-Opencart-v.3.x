  .mobile-menu-constructor-nik-item-toggle {
    position: absolute;
    top: 50%;
    right: 9px;
    margin-top: -16px;
    width: 32px;
    height: 32px;
    font: 400 10px "FontAwesome";
    line-height: 32px;
    text-align: center;
    -webkit-border-radius: 50%;
