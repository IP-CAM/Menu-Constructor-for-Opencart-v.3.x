    text-align: left;

  }
  .mobile-menu-constructor-nik.active {
    background: rgba(0, 0, 0, 0.4);
    z-index: 99999;
    right: 0;
  }
  .mobile-menu-constructor-nik ul {
    list-style-type: none;
    padding-left: 0;
  }
  .mobile-menu-constructor-nik-inner {
    z-index: 15;
    position: fixed;
    top: 0px;
    left: 0;
    bottom: -50px;
    width: 70%;
    padding: 0px 0 70px;
    color: #666;
    background: #FFF;
    font-size: 14px;
    line-height: 20px;
    overflow: auto;
