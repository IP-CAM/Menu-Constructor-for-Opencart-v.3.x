<style>
  .menu-constructor-nik {
    display: flex;
    padding-top: 15px;
    line-height: 4px;
    vertical-align: top;
    z-index: 10000;
  }
  .menu-constructor-nik-item {
    flex-basis: auto;
    flex-grow: 1;
    padding-left: 38px;
    position: static;
    padding-bottom: 12px;
  }
  .menu-constructor-nik-item a.menu-constructor-nik-item-link {
    display: inline-block;
    position: relative;
    color: #1c1c1c;
    -moz-transition: 0.4s color;
    -o-transition: 0.4s color;
    -webkit-transition: 0.4s color;
    transition: 0.4s color;
  }
  .menu-constructor-nik-item span.menu-constructor-nik-item-title {
    position: relative;
    display: inline-block;
    vertical-align: top;
    color: #fff;
    letter-spacing: 1px;
    text-transform: uppercase;
  }
  .menu-constructor-nik-item:hover .menu-constructor-nik-item-block {
    display: block;
  }
  .menu-constructor-nik-item-block {
    background: #fff;
    display: none;
    position: absolute;
    width: 100%;
    left: 0;
    margin-top: 8px;
    padding: 27px 16px 34px;
    z-index: 999;
    min-height: 538px;
    /*border-bottom: 1px solid black;*/
    line-height: 12px;
    font-size: 14px;
  }
  .menu-constructor-nik-item-block-text {
    margin-top: 10px;
    line-height: 14px;
  }
  .menu-constructor-nik-item-block-text img {
    max-width: 100%;
  }
  .menu-constructor-nik-item-block-bottom-link {
    color: #000!important;
    position: absolute;
    display: block;
    height: 31px;
    line-height: 31px;
    clear: both;
    float: none;
    font-size: 12px;
    text-transform: uppercase;
    width: 100%;
    text-align: center;
    background: #e5e5e5;
    margin-top: 20px;
    left: 0;
    bottom: 0;
    -moz-transition: 0.4s;
    -o-transition: 0.4s;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }
  .menu-constructor-nik-item-block-bottom-link:hover {
    background: #cecece;
    -moz-transition: 0.4s;
    -o-transition: 0.4s;
    -webkit-transition: 0.4s;
    transition: 0.4s;
  }
  .menu-constructor-nik-item-block-bottom-link span {
      margin-left: -15px;
  }
  .w-100 {
    width: 100%;
  }
  .w-66 {
    width: 66.7%;
  }
  .w-50 {
    width: 50%;
    float: left;
  }
  .w-33 {
    width: 33.3%;
    float: left;
  }
  .w-25 {
    width: 25%;
    float: left;
  }
  .w-20 {
    width: 20%;
    float: left;
  }
  .w-16 {
    width: 16.6%;
    float: left;
  }
  .w-12 {
    width: 12%;
    float: left;
  }
  .burger-button {
    background: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='25' height='25' viewBox='0 0 25 25' x='200' y='205'%3E%3Cg transform='translate(4 5)' fill-rule='evenodd'%3E%3Crect y='6' width='17' height='2' rx='2'/%3E%3Crect width='17' height='2' rx='2'/%3E%3Crect y='12' width='17' height='2' rx='2'/%3E%3C/g%3E%3C/svg%3E") 50% 50% no-repeat;
    height: 29px;
    width: 25px;
    margin-left: 15px;
    border: 0;
    cursor: pointer;
    outline: none;
  }
  .mobile-menu-constructor-nik {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 999;
    text-align: left;

  }
  .mobile-menu-constructor-nik.active {
    background: rgba(0, 0, 0, 0.4);
    z-index: 99999;
    right: 0;
  }
  .mobile-menu-constructor-nik ul {
    list-style-type: none;
    padding-left: 0;
  }
  .mobile-menu-constructor-nik-inner {
    z-index: 15;
    position: fixed;
    top: 0px;
    left: 0;
    bottom: -50px;
    width: 70%;
    padding: 0px 0 70px;
    color: #666;
    background: #FFF;
    font-size: 14px;
    line-height: 20px;
    overflow: auto;
    -moz-transform: translateX(-100%);
    -ms-transform: translateX(-100%);
    -o-transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
    transform: translateX(-100%);
    -moz-transition: 0.3s ease;
    -o-transition: 0.3s ease;
    -webkit-transition: 0.3s ease;
    transition: 0.3s ease;
  }
  .mobile-menu-constructor-nik-overlay {
    z-index: 14;
    position: fixed;
    top: 0px;
    left: 0;
    bottom: -50px;
    width: 100%;
    padding: 0px 0 70px;
    font-size: 14px;
    line-height: 20px;
    overflow: auto;
    -webkit-box-shadow: 5px 0 5px 0 rgb(0 0 0 / 10%);
    -moz-box-shadow: 5px 0 5px 0 rgba(0, 0, 0, 0.1);
    box-shadow: 5px 0 5px 0 rgb(0 0 0 / 10%);
    -moz-transform: translateX(-100%);
    -ms-transform: translateX(-100%);
    -o-transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
    transform: translateX(-100%);
    -moz-transition: 0.3s ease;
    -o-transition: 0.3s ease;
    -webkit-transition: 0.3s ease;
    transition: 0.3s ease;
  }
  .mobile-menu-constructor-nik.active .mobile-menu-constructor-nik-inner, .mobile-menu-constructor-nik.active .mobile-menu-constructor-nik-overlay {
    transform: translateX(0);
  }
  .mobile-menu-constructor-nik-inner li {
    overflow: hidden;
  }
  .mobile-menu-constructor-nik-inner li > a {
    display: block;
    color: #666;
    padding: 12px 45px 12px 20px;
  }
  .mobile-menu-constructor-nik-inner > li > a {
    width: 100%;
  }
  .mobile-menu-constructor-nik-inner a {
    border-bottom: #f5f5f5 solid 1px;
  }
  .mobile-menu-constructor-nik-inner a:hover {
    text-decoration: none;
    color: #000;
  }
  .mobile-menu-constructor-nik-item-link {
    position: relative;
    width: 100%;
    border-bottom: #f5f5f5 solid 1px;
    display: block;
    color: #666;
    padding: 12px 45px 12px 20px;
  }
  .mobile-menu-constructor-nik-item-link:hover {
    text-decoration: none;
    color: #000;
  }
  .mobile-menu-constructor-nik-item-title {
    font-size: 15px;
    line-height: 16px;
    font-weight: bold;
  }
  .mobile-menu-constructor-nik-item-toggle {
    position: absolute;
    top: 50%;
    right: 9px;
    margin-top: -16px;
    width: 32px;
    height: 32px;
    font: 400 10px "FontAwesome";
    line-height: 32px;
    text-align: center;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    z-index: 1;
    background: rgba(0, 0, 0, 0.1);
  }
  .mobile-menu-constructor-nik-item-toggle::after {
    content: '\f078';
  }
  .mobile-menu-constructor-nik-item-submenu-inner {
    max-width: 1217px;
    margin-left: 0px;
    padding-top: 10px;
  }
  .mobile-menu-constructor-nik-item-submenu-item {
    width: auto;
  }
  .mobile-menu-constructor-nik-item-submenu-item img {
    max-width: 100%;
  }
  .mobile-menu-constructor-nik ul ul a {
    padding-left: 35px;
    display: block;
    width: 90%;
    color: #676767 !important;
    margin: 0px auto;
  }
  .mobile-menu-constructor-nik-item-submenu-item-text {
    padding-left: 35px;
    display: block;
    width: 90%;
    margin: 5px auto;
  }
  .mobile-menu-constructor-nik-item-link.active .mobile-menu-constructor-nik-item-toggle {
    -moz-transform: rotate(180deg);
    -ms-transform: rotate(180deg);
    -o-transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
    transform: rotate(180deg);
  }
  .mobile-menu-constructor-nik-item-submenu-bottom-link {
    -moz-transition: 0.4s;
    -o-transition: 0.4s;
    -webkit-transition: 0.4s;
    transition: 0.4s;
    margin: 0 !important;
    width: 100% !important;
    margin-top: 15px !important;
    text-align: center;
    background: #e5e5e5;
  }
  .mobile-menu-constructor-nik-item-submenu-bottom-link:hover {
    background: #cecece;
    -moz-transition: 0.4s;
    -o-transition: 0.4s;
    -webkit-transition: 0.4s;
  }
</style>

<div class="row hidden-xs" style="background-color: #000; margin-right: 0;">
  <div class="container">
    <div class="menu-constructor-nik">

      {% for menu_item in menu %}

        <div class="menu-constructor-nik-item">
          {% if menu_item.link %}
            <a href="{{ menu_item.link }}" class="menu-constructor-nik-item-link">
              <span class="menu-constructor-nik-item-title">{{ menu_item.name }}</span>
            </a>
          {% else %}
            <span class="menu-constructor-nik-item-title">{{ menu_item.name }}</span>
          {% endif %}

          {% if menu_item.block %}
            <div class="menu-constructor-nik-item-block">

              <div style="max-width: 1170px; margin: 0 auto; display: flex; justify-content: center; flex-wrap: wrap;">

                {% for col in menu_item.block.block_cols %}
                  <div class="{{ col.col_width }}">

                    {% for block_data in col.block_data %}

                      <div style="margin: 0 auto;">
                        <div class="w-100" style="display: flex; flex-direction: column;">
                          {% for content in block_data.contents %}
                            {% if content.type == 'text' %}
                              <div class="menu-constructor-nik-item-block-text">
                                {{ content.value }}
                              </div>
                            {% elseif content.type == 'products' %}
                              <div> <!-- style="margin: 0 auto;" -->
                                {% for product in content.value %}

                                  <a href="{{ product.href }}" class="product-layout product-list col-sm-3 col-xs-12" style="margin: 0 7px 0 0px; padding: 10px 0; width: fit-content; display: block;">
                                    <div class="added-product-image" style="background-color: #f5f5f5; padding: 44px 19px; width: fit-content; margin: 0px 0px 18px;">
                                      <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
                                    </div>
                                    <div class="caption" style="margin-top: 7px; text-align: left;">
                                      <p style="color: black; font-weight: bold;">{{ product.model }}</p>
                                      <p style="color: black; margin: 10px 0px;">{{ product.name }}</p>
                                      <p class="price" style="display: inline-block; color: #000; font-weight: bold; letter-spacing: -.2px;">{{ product.price }}</p>
                                    </div>
                                  </a>

                                {% endfor %}
                              </div>
                            {% elseif content.type == 'menu_items' %}
                              <div>
                                {% for menu_item in content.value %}
                                  <a href="{{ menu_item.link }}" style="color: black; margin-top: 18px; display: block;">
                                    {{ menu_item.name }}
                                  </a>
                                {% endfor %}
                              </div>
                            {% endif %}
                          {% endfor %}

                        </div>
                      </div>

                    {% endfor %}
                  </div>
                {% endfor %}
              </div>

              {% if menu_item.bottom_link_name and menu_item.bottom_link %}
                  <a href="{{ menu_item.bottom_link }}" class="menu-constructor-nik-item-block-bottom-link">
                      <span>{{ menu_item.bottom_link_name }}</span>
                  </a>
              {% endif %}

            </div>
          {% endif %}

        </div>

      {% endfor %}

    </div>
  </div>
</div>

<div class="row visible-xs">
    <div class="container">
        <div class="burger-button">
            <span></span>
        </div>
    </div>

    <div class="mobile-menu-constructor-nik">
        <ul class="mobile-menu-constructor-nik-inner">
            {% for menu_item in menu %}
                <li class="mobile-menu-constructor-nik-item">
                    {% if menu_item.link %}
                        <a href="{{ menu_item.link }}" class="mobile-menu-constructor-nik-item-link ">
                            <span class="mobile-menu-constructor-nik-item-title">{{ menu_item.name }}</span>
                            {% if menu_item.block %}
                                <span class="mobile-menu-constructor-nik-item-toggle"></span>
                            {% endif %}
                        </a>
                    {% else %}
                        <div class="mobile-menu-constructor-nik-item-link">
                            <span class="mobile-menu-constructor-nik-item-title">{{ menu_item.name }}</span>
                            {% if menu_item.block %}
                                <span class="mobile-menu-constructor-nik-item-toggle"></span>
                            {% endif %}
                        </div>
                    {% endif %}
                    {% if menu_item.block %}
                        <ul class="mobile-menu-constructor-nik-item-submenu" style="display: none;">
                            <div class="mobile-menu-constructor-nik-item-submenu-inner">
                                {% for col in menu_item.block.block_cols %}
                                    {% for block_data in col.block_data %}

                                        {% for content in block_data.contents %}
                                            {% if content.type == 'text' %}
                                                <li class="mobile-menu-constructor-nik-item-submenu-item">
                                                    <div class="mobile-menu-constructor-nik-item-submenu-item-text">
                                                        {{ content.value }}
                                                    </div>
                                                </li>
                                            {% elseif content.type == 'products' %}
                                                {% for product in content.value %}
                                                  <li class="mobile-menu-constructor-nik-item-submenu-item">
                                                    <a href="{{ product.href }}" class=""> <!-- style="margin: 0 7px 0 0px; width: fit-content; display: block;" -->
                                                        <div class="" style="background-color: #f5f5f5; padding: 44px 19px; width: fit-content; margin: 0px 0px 18px;">
                                                            <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
                                                        </div>
                                                        <div class="caption" style="margin-top: 7px; text-align: left;">
                                                            <p style="color: black; font-weight: bold;">{{ product.model }}</p>
                                                            <p style="color: black; margin: 10px 0px;">{{ product.name }}</p>
                                                            <p class="price" style="display: inline-block; color: #000; font-weight: bold; letter-spacing: -.2px;">{{ product.price }}</p>
                                                        </div>
                                                    </a>
                                                  </li>
                                                {% endfor %}
                                            {% elseif content.type == 'menu_items' %}
                                              <li class="mobile-menu-constructor-nik-item-submenu-item">
                                                  <ul>
                                                      {% for menu_item in content.value %}
                                                        <li>
                                                            <a href="{{ menu_item.link }}">{{ menu_item.name }}</a>
                                                        </li>
                                                      {% endfor %}
                                                  </ul>
                                              </li>
                                            {% endif %}
                                        {% endfor %}

                                    {% endfor %}

                                {% endfor %}

                                {% if menu_item.bottom_link_name and menu_item.bottom_link %}
                                    <li class="mobile-menu-constructor-nik-item-submenu-item">
                                        <a href="{{ menu_item.bottom_link }}" class="mobile-menu-constructor-nik-item-submenu-bottom-link">
                                            {{ menu_item.bottom_link_name }}
                                        </a>
                                    </li>
                                {% endif %}
                            </div>
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        <div class="mobile-menu-constructor-nik-overlay"></div>
    </div>
</div>

<script>
  $('.mobile-menu-constructor-nik-item-toggle').on('click', function (e) {
      e.preventDefault()
      let that = $(this)
      that.parent().toggleClass('active')
      that.parent().parent().find('.mobile-menu-constructor-nik-item-submenu').slideToggle(400);
  })
  $('.burger-button').on('click', function () {
      $('.mobile-menu-constructor-nik').toggleClass('active')
  })
  $('.mobile-menu-constructor-nik-overlay').on('click', function () {
      $('.mobile-menu-constructor-nik').removeClass('active')
  })
  $(window).resize(function () {
      let width = $(window).width()

      if (width > 767) {
          $('.mobile-menu-constructor-nik').removeClass('active')
      }
  })
</script>
